    <style>
         :scope {
            display: block;
            position: absolute;
        }

        #layer2 {
            transform-origin: 50% 50%;
            /*transition: transform 2s linear;*/
        }

        .bounce {
            animation: bounce 1.0s infinite;
        }

        @keyframes bounce {
            0% {
                transform: scale(1.0) rotate(0deg);
            }
            100% {
                transform: scale(1.0);
            }
            50% {
                transform: scale(1.2) rotate(180deg);
            }
        }

        svg {
            overflow: visible;
        }
    </style>

    <script>
        this.value = 0
        this.turn = 0

        // fa-play:  &#xF04B \uF04B
        // fa-pause: &#xF04C \uF04C
        // fa-stop:  &#xF04D \uF04D
        this.on('mount', function () {
            // console.debug(this.refs.text.textContent)
            // console.debug(this.root.querySelectorAll('#layer1 *'))
        })

        this.play = function () { this.trigger('play') }
        this.on('play', function () {
            this.refs.text.textContent = "\uF04B"
            let layer = this.root.querySelector('#layer2');
            layer.classList.add('bounce');
        })

        this.pause = function () { this.trigger('pause') }
        this.on('pause', function () {
            this.refs.text.textContent = "\uF04C"
            let layer = this.root.querySelector('#layer2');
            layer.classList.remove('bounce');
        })

        this.stop = function () { this.trigger('stop') }
        this.on('stop', function () {
            this.refs.text.textContent = "\uF04D"
            let layer = this.root.querySelector('#layer2');
            layer.classList.remove('bounce');
        })

        this.change = function (x) { this.trigger('change', x) }
        this.on('change', function (x) {
            this.play()
            this.value = x
            this.turn += x / 50
        })
    </script>

